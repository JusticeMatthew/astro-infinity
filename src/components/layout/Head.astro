---
import { Font } from "astro:assets";

import ogImage from "~/assets/og-image.webp";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>To Infinity and Beyond...</title>
  <meta
    name="description"
    content="A tech demo showcasing an 'infinity space' made with Astro + Solid"
  />
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="favicon" href="/favicon.svg?v=1" />
  <meta name="robots" content="noindex, nofollow" />
  {/* OG Tags */}
  <meta property="og:type" content="website" />
  <meta property="og:title" content="To Infinity and Beyond..." />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:site_name" content="ASTRO_INFINITY" />
  <meta
    property="og:description"
    content="A tech demo showcasing an 'infinity space' made with Astro + Solid"
  />
  <meta property="og:image" content={ogImage.src} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  {/* Social Tags */}
  <meta property="twitter:title" content="To Infinity and Beyond..." />
  <meta name="twitter:card" content="summary_large_image" />
  <meta
    property="twitter:description"
    content="A tech demo showcasing an 'infinity space' made with Astro + Solid"
  />
  <meta property="twitter:image" content={ogImage.src} />
  <meta property="twitter:url" content={canonicalURL} />
  {/* Misc */}
  <meta name="robots" content="max-image-preview:large" />
  <Font cssVariable="--astro-font" />
</head>
