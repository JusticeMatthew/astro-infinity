{
  "bracketSameLine": true,
  "tailwindAttributes": ["class:list"],
  "endOfLine": "lf",
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "bracketSpacing": true,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "**/*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "importOrder": [
    "<TYPES>",
    "^\\~/styles/(.*)$",
    "^astro[:/](.*)$",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "",
    "^\\~/lib/(.*)$",
    "^\\~/constants/(.*)$",
    "",
    "^\\~/layout/(.*)$",
    "^\\~/primitives/(.*)$",
    "^\\~/interface/(.*)$",
    "^\\~/components/(.*)$",
    "",
    "^\\~/assets/(.*)$",
    "^\\~/(.*)$",
    "^[./]"
  ],
  "importOrderTypeScriptVersion": "5.8.3",
  "importOrderCaseSensitive": true
}
